@using WSUseExpenseManagerClient
@using WSClient.ApplicationWS;
@{
	ViewData["Title"] = "Index";
}

<h2>Agregar Usuario al Grupo</h2>

<form asp-action="AddUserToGroup" method="post">
	<div class="form-group">
		<label for="groupId">Seleccionar un Grupo:</label>
		<select id="groupid" name="groupid" class="form-select" aria-label="Default select example">
			<option value="">Seleccione </option>
			@foreach (GroupDTO group in Model.groupDTOs)
			{
				<option value="@group.Id">@group.Name</option>
			}
		</select>
	</div>
	<div class="form-group">
		<label for="userName">Buscar un Usuario:</label>
		<select id="userId" name="userId" class="form-select" aria-label="Default select example">
			<option value="">Seleccione </option>
			@foreach (UserDTO user in Model.userDTOs)
			{
				<option value="@user.Id">@user.Name</option>
			}
		</select>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-primary">Agregar Usuario</button>
	</div>
</form>
@if (Model.selectedUsers != null)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Código</th>
				<th>Name Usuario</th>
				<th>Name Grupo</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>

			@foreach (UserDTO selectedUser in Model.selectedUsers.GetAllUsers())
			{
				<tr>
					<td>@selectedUser.Id</td>
					<td>@selectedUser.Name</td>
					<td>@selectedUser.fullNameGroup</td>
					<td>
						<a href="#" class="btn btn-danger" onclick="removeUserGroup(@selectedUser.Id)">Eliminar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
<form asp-action="saveGroupUserForm" method="post" >
	<div class="form-group">
		<input type="hidden" id="groupIdHidden" name="groupId" value="@TempData["GroupId"]" />
		<button type="submit" id="saveGroupUser" class="btn btn-primary">Guardar Todos</button>
	</div>
</form>
<script>

	document.addEventListener("DOMContentLoaded", function () {
		var saveGroupUserButton = document.getElementById("saveGroupUser");

		saveGroupUserButton.addEventListener("click", function () {
			var groupId = document.getElementById("groupIdHidden").value;

			if (groupId !== null) {
				//groupIdHidden.value = groupId;
				document.getElementById("saveGroupUserForm").submit();
			} else {
				alert("Por favor, seleccione un grupo antes de guardar.");
			}
		});
	});

</script>


